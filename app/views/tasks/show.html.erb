<div class="main">
  <h1><%= @task[:title] %></h1>
  <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-secondary"%>
</div>
<div class="container">
  <div class="details">
    <p><%= @task[:details] %></p>
  </div>
</div>
<br>
<div class="ceck-box">
  <p><%= check_box("task", @task.id, {checked: @task.completed}) %>
    <%= if @task.completed
      "This task is completed!"
    else
      "This task is not completed yet"
      end %><% %>
  </p>
</div>
<br>
<div>
  <%= link_to "Back to list", '/tasks' %>
</div>




